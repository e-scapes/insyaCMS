<?xml version="1.0" encoding="UTF-8"?>
<!--
To change this template, choose Tools | Templates
and open the template in the editor.
-->
<root>
    <fields>
         
        <Data_Type name='Data_Type' type='block' title="Data Type"  />
        
        <viwtype name='viwtype'
                 type="select"  
                 title="Type" 
                 select_data="videos>>videos;images>>images;products>>products;news>>news"
                 showHide= "videos>>seleccatvideo;images>>seleccat;products>>seleccatpro;news>>seleccatnews"
        />
        
        <seleccatnews name="seleccatnews"  
                      type="select"  
                      title="News Category" 
                      select_data="com_content_catgories" 
                      select_type="DB"  
                      select_text ="title"
                      select_value ="id"
        />
        
        
        
        <seleccat name="seleccat"  
                  type="select"  
                  title="Images Category" 
                  select_data="com_images_gallery_categories" 
                  select_type="DB"  
                  select_text ="title"
                  select_value ="id"
        />
        
        
        
        <seleccatvideo name="seleccatvideo"  
                       type="select"  
                       title="video Category" 
                       select_data=" com_video_gallery_categories" 
                       select_type="DB"  
                       select_text ="title"
                       select_value ="id"
        />
        
          
          
          
        <seleccatpro name="seleccatpro"  
                     type="select"  
                     title="Products Category" 
                     select_data="com_products_categories" 
                     select_type="DB"  
                     select_text ="name"
                     select_value ="id"
        />
        
        <DataTypeend type='endblock'  name='DataTypeend'/>
        
      
        
        
        <show_data name='show_data' type='block' title="Show Data Options"  />
        <showTitle name="showTitle"   type="enable"   value="1" title="Show Title"  />
        <showImage name="showImage"   type="enable"   value="1" title="Show Image"  />
        <showDec name="showDec"   type="enable"   value="1" title="Show Description"  />
          <DecNum name="DecNum"   type="text"   value="12" title="Description Limit"  />
        <show_dataEnd  name='show_dataEnd' type='endblock' />
        
              

        <data_style name='data_style' type='block' title="Data Style Options"  />
        <imageWidth name="imageWidth"   type="text"   value="100%" title="Image Width"  />
        <imageHeight name="imageHeight"   type="text"   value="100%" title="Image Height"  />
        <linkType name="linkType"    select_data="fullLink>>Full Link;more>>Read More Button"   type="select"   title="Link Type"  />
        
        
        
        
        <data_styleEnd  name='data_styleEnd' type='endblock' />
        <Model_Options name='Model_Options' type='block' title="Module Options"  />
        <height name="height"   type="text"   value="200px" title="height"  />   
        <showtype name="showtype" type="select"  select_data="slider>>slider;banner>>banner" title="Style" />
        <ModelOptionsEnd name='ModelOptionsEnd' type='endblock'  />
        
        
        
        <slide_Options name='slide_Options' type='block' title="slide Options"  />
        <direction name="direction" type="select"  value='left' select_data="left>>left;right>>right;up>>up;down>>down" title="Direction" />
        <number_slides_visible name="number_slides_visible"   type="text"   value="4" title="Number of Items Visible "  />
        <scroll name="scroll"   type="text"   value="1" title="Number of Scroll Items"  />
        <buttonsShow name="buttonsShow"   type="enable"   value="1" title="Buttons Show"  />
        <pagesShow name="pagesShow"   type="enable"   value="1" title="Pages Show"  />
        <auto name="auto"   type="enable"   value="1" title="auto"  />
        <timer name="timer"   type="enable"   value="1" title="timer"  />
        <delay name="delay"   type="text"   value="1000" title="Transition Delay in ms"  />
        <slideOptionsEnd  name='slideOptionsEnd' type='endblock' />
        
        
        
       
              
              
        
    </fields>
</root>


    

