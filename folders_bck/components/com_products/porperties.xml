        />
        
      
        
        
        
        
        
        <cat_id name="cat_id"  type="select"  
                title="Category ID" 
                select_data="com_products_categories" 
                select_type="DB"  
                select_text ="name"
                select_value ="id"
                 
             
        />
        
        <setting 
            name="setting"  
            type="select"  
            title="setting" 
            select_data="com_products_setting" 
            select_type="DB"  
            select_text ="title"
            select_value ="id"
        />
        
        
        <item_id 
            name="item_id" 
            type="select"  
            title="Item Id" 
            select_data="com_products" 
            select_type="DB"  
            select_text ="title"
            select_value ="id"
        />
        <nums 
            name="nums"  
            type="number"  
            title="Number of Items per Page" 
            
        />
         
         
         
         
        <catPageViewTitle 
            name="catPageViewTitle"  
