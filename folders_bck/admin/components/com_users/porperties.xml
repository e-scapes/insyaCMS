<root>
    
    <fields>
        <name name="name"  type="text"  title="Name"/>

        <user_name  name="user_name"  type="text" title="User Name"  />
        <email name="email"  type="email" title="E-mail"  pclass='_50' />
        <password name="password"  type="password" title="Password"  pclass='_50'/>
        <image name="image"  type="pic" title="image"  pclass='_50' />
        <g_id name="g_id"  type="select" select_type="DB" 
              select_data="com_users_groups" 
              select_text="group_name"
              select_value="id"
              title="Group"  pclass='_50' />
        <enabled name="enabled"  type="enable" title="Enable"   pclass='_50' />
        
    </fields>
    


    <selectfields>
        <g_id/>
    </selectfields>
    
    <children>
    </children>
    
 
    <group>
        <com_users title="Users" parent="yes" />
        <com_users_groups title="Users groups"  />
        <com_users_settings title="users settings"  />
    </group>
    
       
    <listfields>   
      
        <name  list-width="4" />
        <user_name list-width="3"  />
       <g_id list-width="2" />
        <enabled list-width="1" />
       
        
    </listfields>
    
    

</root>


    

