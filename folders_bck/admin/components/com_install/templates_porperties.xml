<root>
    <fields>
        <ins_title name="ins_title"  type="text"  title="Title" pclass="col-6"/>
                <line1  type="line" style='background-color:transparent' /> 
     
        <ins_alias name="ins_alias"   title="Select Template"  comment="Select from available list of templates" type="select" select_type="DIR" select_data="../templates/" select_text="dir" pclass="col-6" />
                   <line2  type="line" style='background-color:transparent' /> 

        <ins_for name="ins_for"   type="hidden" value="fornt" />
        <ins_type  name="ins_type"  type="hidden" title="enable" value="@%get::type%@" />   
        <enabled name="enabled"  type="enable_one" title="default" pclass="col-3" />
      
        
    </fields>

    <selectfields>
    </selectfields>
    
    <listfields view="ins_type='template'" addtolink="type=template">   
<ins_title  list-width="8"/>
        <order  list-width="1"/>   
        <enabled  list-width="1"/>
    </listfields>
</root>
