<root>
    
    <fields>
        <name name="name"  type="text"  title="Name"/>

        <user_name  name="user_name"  type="text" title="User Name" />
        <email name="email"  type="email" title="E-mail" />
        <password name="password"  type="password" title="Password" />
        <g_id name="g_id"  type="select" select_type="DB" 
              select_data="com_users_groups" 
              select_text="group_name"
              select_value="id"
              title="Group" />
        <enabled name="enabled"  type="enable" title="Enable" />
        
    </fields>
    


    <selectfields>
        <g_id/>
    </selectfields>
    
    <children>
    </children>
    
 
    <group>
        <com_users title="Users" parent="yes" />
        <com_users_groups title="Users groups"  />
    </group>
    
       
    <listfields>   
      
        <name list-width="3" />
        <user_name list-width="2"/>
        <password list-width="3"/>
        <g_id list-width="1"/>
        
        <enabled list-width="1"/>
        
    </listfields>
    
    

</root>


    

