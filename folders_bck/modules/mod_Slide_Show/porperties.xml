<root>
    <fields>
        
        
        
     
    
        

          <viwtype name='viwtype'
        
              type="select"  
              title="Type" 
              select_data="videos>>videos;images>>images;products>>products;news>>news"
              showHide= "videos>>seleccatvideo;images>>seleccat;products>>seleccatpro;news>>seleccatnews"
        />
        
               <seleccatnews name="seleccatnews"  
                  type="select"  
                  title="News Category" 
                  select_data="com_content_catgories" 
                  select_type="DB"  
                  select_text ="title"
                  select_value ="id"
        />
        
        
        
        <seleccat name="seleccat"  
                  type="select"  
                  title="Images Category" 
                  select_data="com_images_gallery_categories" 
                  select_type="DB"  
                  select_text ="title"
                  select_value ="id"
        />
        
        
        
        <seleccatvideo name="seleccatvideo"  
                       type="select"  
                       title="Video Category" 
                       select_data=" com_video_gallery_categories" 
                       select_type="DB"  
                       select_text ="title"
                       select_value ="id"
        />
        
          
          
          
        <seleccatpro name="seleccatpro"  
                     type="select"  
                     title="Products Category" 
                     select_data="com_products_categories" 
                     select_type="DB"  
                     select_text ="name"
                     select_value ="id"
        />
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        <effect name="effect" type="select"  select_data="random>>random;fold>>fold;fade>>fade;sliceDown>>sliceDown" title="effect Type" />
        
        <style name="style" type="select"  select_data="theme-dark>>dark;theme-light>>light;theme-default>>default" title="style" />
        
        
        
        
        
        <captionOpacity name="captionOpacity"   type="text"   value="1" title="caption Opacity"  />
         
        <Speed name="Speed"   type="text"   value="800" title="Speed"  />
          
        <pauseTime name="pauseTime"   type="text"   value="6000" title="pause Time"  />
        
       
        
        <directionNav name="directionNav"   type="select"  value='true' select_data="true>>true;false>>false" title="direction Nav"  />
       
     
        <directionNavHide name="directionNavHide"    type="select"   select_data="true>>true;false>>false"  title="Auto Nav Hide"  />
       
         
          
        <pauseOnHover name="pauseOnHover"    type="select"   select_data="true>>true;false>>false"  title="pause On Hover"  />
        
        
        
        <controlNavThumbs name="controlNavThumbs"    type="select"   select_data="true>>true;false>>false"  title="Thumbs"  />
             

        <morecss name="morecss"   type="textarea" title="morecss" />
         
        
        
        
    </fields>
</root>


    

