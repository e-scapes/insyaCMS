<root>
    <fields>
        
       
        <right_menu name="right_menu"  
                    type="select"  
                    title="right menu" select_data="com_menus" 
                    select_type="DB"  
                    select_text ="men_title"
                    select_value ="id"
                    comment="Select right menu" pclass='_50' 
                    
        />
        <left_menu name="left_menu"  
                   type="select"  
                   title="left menu" select_data="com_menus" 
                   select_type="DB"  
                   select_text ="men_title"
                   select_value ="id"
                   comment="Select right left_menu" pclass='_50' 
        />
        
        
        <footer_bar name="footer_bar"  
                    type="select"  
                    title="footer bar" select_data="com_menus" 
                    select_type="DB"  
                    select_text ="men_title"
                    select_value ="id"
                    comment="Select footer_bar" pclass='_50' 
        />
                   
        <header_bar name="header_bar"  
                    type="select"  
                    title="header bar" select_data="com_menus" 
                    select_type="DB"  
                    select_text ="men_title"
                    select_value ="id"
                    comment="Select header_bar" pclass='_50' 
        />
       
        <theme 
            name="theme"  
            title="Theme" 
            type="select" 
            select_data="a>>white;b>>brown;c>>blue;d>>green;e>>orange;f>>red;g>>gray"
            pclass='_50' />
                        
                                  
       
        <pages_transition 
            name="pages_transition"  
            title="pages transition" 
            type="select" 
            select_data="fade>>fade;pop>>pop;flip>>flip;turn>>turn;flow>>flow;slidefade>>slidefade;slide>>slide;
slidedown>>slidedown;none>>none;rondome>>random"
            pclass='_50' />
        
        
        

        <homebt name="homebt"  type="enable"  title="home button" pclass='_50' />
        <backbt name="backbt"  type="enable"  title="Back button" pclass='_50' />
      
    </fields>
    

       
    <listfields>   
      
        <title  list-width="10"/>
      
        
    </listfields>
    
    

</root>


    

